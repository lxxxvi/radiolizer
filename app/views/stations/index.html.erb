<h1>Stations</h1>

<ul class="stations">
  <% @stations.each do |station| %>
    <li>
        <div>
            <%= link_to station.name, station_path( station ), class: 'station'  %>
        </div>
        <div>
            <span class="play"><%= number_to_human(station.play_count) %></span>
            <span class="artist"><%= number_to_human(station.artist_count) %></span>
            <span class="song"><%= number_to_human(station.song_count) %></span>
        </div>
    </li>
  <% end %>
</ul>


