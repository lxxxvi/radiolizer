<% if item %>

  <%
     by_time = {
             'Past 7 days': item.count_plays( 7.days.ago ),
             'Past 30 days': item.count_plays( 30.days.ago ),
             'Past 365 days': item.count_plays( 365.days.ago ),
             'All time': item.count_plays
     }
  %>

<div class="row">
    <div class="col-xs-12 col-md-6">
        <h4>By station</h4>
        <div class="list-group">
            <% item.stations.group( :station_id ).count.each do |station_id, count| %>
              <% station = Station.find(station_id) %>
              <div class="list-group-item">
                <h4 class="list-group-item-heading"><%= station.name %></h4>
                <div class="xs-info">
                  <%= count %> <%= 'play'.pluralize( count ) %>
                </div>
              </div>
            <% end %>
        </div>
    </div>
    <div class="col-xs-12 col-md-6">
        <h4>By time</h4>
        <div class="list-group">
            <% by_time.each do |time, count| %>
              <div class="list-group-item">
                <h4 class="list-group-item-heading"><%= time %></h4>
                <div class="xs-info">
                  <%= count %> <%= 'play'.pluralize( count ) %>
                </div>
              </div>
            <% end %>
        </div>
    </div>
</div>








<% end %>