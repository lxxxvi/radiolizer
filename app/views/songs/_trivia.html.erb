<% if song %>

  <div class="list-group">
    <div class="list-group-item">
      <h4 class="list-group-item-heading">First appearance</h4>
      <%= link_to song.first_broadcast.station.name, station_path( song.first_broadcast.station ) %>
      <div class="xs-info">
          on <%= song.first_broadcast.time.strftime("%d %B %Y") %>
      </div>
    </div>
      <div class="list-group-item">
        <h4 class="list-group-item-heading">Last played on station</h4>
        <%= link_to song.last_broadcast.station.name, stations_path( song.last_broadcast.station) %>
        <div class="xs-info">
          <%= distance_of_time_in_words_to_now( song.last_broadcast.time ) %> ago
        </div>
      </div>
  </div>

<% end %>