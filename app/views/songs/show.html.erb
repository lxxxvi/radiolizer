<%= button_tag "Back", { onclick: 'history.go(-1); return false;' } %><br />
<h1><%= @song.name %> by <%= link_to @song.artist.name, @song.artist, class: 'artist' %></h1>

<h2>Where this song is played</h2>
<%= column_chart @song.stations.group( 'stations.name' ).count %>

<% if @song.awards.any? %>
<h2>Won awards</h2>
<%= render partial: 'awards/list', locals: { awards: @song.awards, hide_winner: true } %>
<% end %>

<h2>Broadcast history</h2>
<table>
  <tr>
      <th>Time</th>
      <th>Station</th>
  </tr>
  <% @song.broadcasts.order('broadcasts.time DESC').each do |broadcast| %>
      <tr>
        <td><%= broadcast.time %></td>
        <td><%= link_to broadcast.station.name, station_path(broadcast.station) %></td>
      </tr>
  <% end %>
</table>

